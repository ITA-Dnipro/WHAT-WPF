<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="ArcadeClassic">pack://application;,,,/Resources/Fonts/#ArcadeClassic</FontFamily>
    <system:Double x:Key="FontSizeRegular">20</system:Double>

    <Style x:Key="BaseStyle" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="{StaticResource BaseFontStyle}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}" />
    </Style>
</ResourceDictionary>