                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Grid.ColumnSpan="2">
            <iconPacks:PackIconFontAwesome Kind="FlagSolid"
                                        Width="20"
                                        Height="20"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Margin="4"
                                        Foreground="BlueViolet"/>
            <TextBlock Text="{Binding FlagsOnField}"
