        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Separator Grid.ColumnSpan="2"
                   Grid.Row="0"
                   VerticalAlignment="Bottom"
                   Background="Gray"/>

        <Separator Grid.ColumnSpan="2"
                   Grid.Row="1"
                   VerticalAlignment="Bottom"
                   Background="Gray"/>

        <TextBlock Text="MINESWEEPER"
                   Style="{StaticResource BaseTextBlock}"
                   FontSize="50"
                   Foreground="White"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"/>
